# EventOn environment example for local development.
# Replace these placeholders with values suitable for your organisation before deploying.
# Secrets belong in a dedicated secrets manager; never commit production credentials.

# ---- Global configuration ---------------------------------------------------
NODE_ENV=development
APP_REGION=eu-west-2
CONFIG_DIAG=false

# ---- Web app (Next.js) ------------------------------------------------------
WEB_PORT=3000
NEXT_PUBLIC_CORE_API_URL=http://localhost:4000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_change_me
NEXT_PUBLIC_SENTRY_DSN=
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=dev-nextauth-secret

# ---- Core API service -------------------------------------------------------
CORE_API_PORT=4000
DATABASE_URL=postgres://postgres:postgres@localhost:5432/eventon
REDIS_URL=redis://localhost:6379
JWT_SECRET=dev-jwt-secret
STRIPE_SECRET_KEY=sk_test_change_me
STRIPE_WEBHOOK_SECRET=whsec_dev_change_me
AWS_ACCESS_KEY_ID=FAKEAWSACCESSKEY
AWS_SECRET_ACCESS_KEY=fake-aws-secret-key
AWS_S3_BUCKET=eventon-dev-files
EMAIL_FROM_ADDRESS=no-reply@example.com
SQS_QUEUE_URL=https://sqs.eu-west-2.amazonaws.com/123456789012/eventon-dev-queue

# ---- Scheduler worker -------------------------------------------------------
SCHEDULER_CRON=*/5 * * * *
SCHEDULER_TIMEZONE=Europe/London
CORE_API_INTERNAL_URL=http://localhost:4000/internal
SCHEDULER_SQS_QUEUE_URL=https://sqs.eu-west-2.amazonaws.com/123456789012/eventon-scheduler-queue
SCHEDULER_MAX_CONCURRENCY=5

