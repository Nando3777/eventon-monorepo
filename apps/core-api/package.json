{
  "name": "@eventon/core-api",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts",
    "start": "node dist/server.js",
    "test": "vitest --run --passWithNoTests",
    "prisma:generate": "pnpm --filter @eventon/db generate",
    "prisma:migrate": "pnpm --filter @eventon/db migrate",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@eventon/db": "workspace:*",
    "@prisma/client": "5.18.0",
    "fastify": "^5.0.0",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "eslint": "^9.11.1",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
}
